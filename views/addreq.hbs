<!DOCTYPE html>
<html>
<head>
  <title>Blood Donor Form</title>
  <style>
    /* CSS styles */
    body {
      font-family: Arial, sans-serif;
      background-color:#4bb77dba;
    }

    .container {
      width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f2f2f2;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-top: 130px;

    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input[type="text"],
    select {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    
    .d1{
      margin-bottom:  -18px; 
    }
    .d2{
      margin-left: 50px;
      font-size: 16px;
    }

  </style>
</head>
<script>
  function myFunction() {
  alert("successfully added");
}
</script>
<body>
  <div class="container">
    <h2>Blood Donor Form</h2>
    <form action="" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="Gender">Gender:</label>
        <select id="Gender" name="gen" required>
          <option value="">Select Gender</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>
      

      <div class="form-group">
        <label for="bloodGroup">Blood Group:</label>
        <select id="bloodGroup" name="bgroup" required>
          <option value="">Select Blood Group</option>
          <option value="A+">A+</option>
          <option value="A-">A-</option>
          <option value="B+">B+</option>
          <option value="B-">B-</option>
          <option value="AB+">AB+</option>
          <option value="AB-">AB-</option>
          <option value="O+">O+</option>
          <option value="O-">O-</option>
        </select>
      </div>

      <div class="form-group">
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="mob" required>
      </div>

      {{!-- <input type="submit" value="Submit" class="registerbtn"  > --}}
      <button type="submit" class="registerbtn" onclick="myFunction()">Submit</button>
    </form>
  </div>
</body>
</html>